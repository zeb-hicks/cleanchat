{
  "name": "Clean Chat for Twitch",
  "version": "1.2",
  "manifest_version": 3,
  "description": "Reduces twitch chat clutter, and enlarges emote-only message emotes.",
  "host_permissions": [
    "https://twitch.tv/*",
    "https://www.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitch.tv/*",
        "https://www.twitch.tv/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "script.js"
      ],
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png"
  }
}
